<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Page Title</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bulma/0.7.4/css/bulma.min.css">
</head>

<body>
    <div class="container">
        <div class="container">
            <div class="column">
                <div class="columns is-centered">

                </div>
            </div>
            <div class="columns is-gapless">
                <div class="column">

                </div>
                <div class="column">
                    <h3 class="title is-3">Sanatci Bilgileri Güncelle</h3>
                </div>
                <div class="column">
                </div>
                <div class="column">

                </div>
            </div>
            <div class="column">
                <div class="columns level-left">

                </div>
            </div>

            <div class="container">
                <div class="columns is-centered">
                    <div class="column is-half">
                        <div class="field is-horizontal">
                            <div class="field-label is-normal">
                                <form action="/guncelle" method="POST">
                                    <label class="label">Ad Soyad</label>
                            </div>
                            <div class="field-body">
                                <div class="field">
                                    <p class="control">
                                        <input class="input" name="ad" type="text" value="<%= yaz[0].SanatciAdi %>">
                                    </p>
                                </div>
                            </div>
                        </div>
                        <div class="field is-horizontal">
                            <div class="field-label is-normal">
                                <label class="label">Doğum Tarihi</label>
                            </div>
                            <div class="field-body">
                                <div class="field">
                                    <p class="control">
                                        <input class="input" value="2015-10-10" name="dogumtarihi" type="date">
                                    </p>
                                </div>
                            </div>
                        </div>
                        <div class="field is-horizontal">
                            <div class="field-label is-normal">
                                <label class="label">Hayatta mı ?</label>
                            </div>
                            <div class="field-body">
                                <div class="control">
                                    <label class="radio">
                                        <input type="radio" checked="checked" value="1" name="hayattami">
                                        Evet
                                    </label>
                                    <label class="radio">
                                        <input type="radio" value="0" name="hayattami">
                                        Hayır
                                    </label>
                                </div>
                            </div>
                        </div>
                        <div class="field is-horizontal">
                            <div class="field-label is-normal">
                                <label class="label">Muzik Türü ?</label>
                            </div>
                            <div class="field-body">
                                <div class="select">
                                    <select class="is-hovered" name="muzikTur">
                                        <% tur.forEach(function(turler){ %>
                                        <option selected value="<%= turler.MuzikTurId %>"><%= turler.MuzikTur %>
                                        </option>
                                        <% }); %>
                                    </select>
                                </div><a href="/turGuncelle" class="button is-light">Ekle</a><input class="input"
                                    value="<%= id %>" name="id" type="hidden">
                            </div>
                        </div>
                        <div class="field is-horizontal">
                            <div class="field-label is-normal">
                                <label class="label">Albüm Adı</label>
                            </div>
                            <div class="field-body">
                                <div class="field">
                                    <p class="control">
                                        <input class="input" name="albumAdi" value="<%= yaz[0].AlbumAdi %>"
                                            placeholder="Pop,Caz" type="text">
                                    </p>
                                </div>
                            </div>
                        </div>
                        <div class="field is-horizontal">
                            <div class="field-label is-normal">
                                <label class="label">Çıkış Tarihi</label>
                            </div>
                            <div class="field-body">
                                <div class="field">
                                    <p class="control">
                                        <input class="input" value="2015-10-10" name="cikisTarihi" type="date">
                                    </p>
                                </div>
                            </div>
                        </div>
                        <div class="columns is-gapless">
                            <div class="column">

                            </div>
                            <div class="column">
                                <input type="submit" value="Güncelle" class="button is-link">

                            </div>
                            <div class="column">
                                <a href="/" class="button is-light">Cancel</a>
                            </div>
                            <div class="column">
                                </form>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
</body>

</html>